<section>
  <div class="row d-flex justify-content-center mt-5">
    <%= search_form_for @q, url: root_path do |form| %>
      <div class="input-group">
        <%= form.search_field :city_or_country_or_profile_title_cont, class: "form-control", placeholder: "Search by country or city", aria: { label: "Search by country or city", describeby: "button-addon2" } %>
        <%= form.submit "Search", class: "btn btn-primary", id: "button-addon2" %>
      </div>
    <% end %>
    <div class="row text-center">
    <% @users.each do |user|%>
      <div class="col-md-4 mt-5 mb-0">
        <div class="card testimonial-card">
          <div class="card-up" style="background-color: #6d5b98;"></div>
          <div class="avatar mx-auto bg-white">
            <img src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(9).webp"
              class="rounded-circle img-fluid" />
          </div>
          <div class="card-body">
            <h4 class="user-info mb-4" data-controller="user-name"></h4>
            <h5 data-user-name-target='name' data-action="click->user-name#getUserName"><%= user.first_name%></h5>
            <hr />
            <p class="dark-grey-text mt-4">
              <i class="fas fa-quote-left pe-2"></i><%= user.profile_title%>
            </p>
            <small class="text-primary"><%= user.country%></small><br>
            <%= link_to "View Profile", member_path(user), class: "btn btn-primary mt-3" %>
          </div>
        </div>
      </div>
    <%end%>  
    </div>
  </div>
</section>