<% if @requested_connections.present? %>
  <div class="row d-flex justify-content-center mt-5">
    <div class="row text-center">
    <% @requested_connections.each do |connection|%>
      <div class="col-md-4 mt-5 mb-0">
        <div class="card testimonial-card">
          <div class="card-up" style="background-color: #6d5b98;"></div>
          <div class="avatar mx-auto bg-white">
            <img src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(9).webp"
              class="rounded-circle img-fluid" />
          </div>
          <div class="card-body">
            
            <p class="lead fw-bold" ><%= connection.requested.first_name%></p>
            <p class="dark-grey-text mt-4">
              <i class="fas fa-quote-left pe-2"></i><%= connection.requested.profile_title%>
            </p>
            <%= link_to connection.status.titleize, "javascript:void(0)", class: "btn btn-primary mt-2" %>
          </div>
        </div>
      </div>
    <%end%>  
    </div>
  </div>
<%end%>
<% if @received_connections.present? %>
  <div class="row d-flex justify-content-center mt-5">
    <div class="row text-center">
    <% @received_connections.each do |connection|%>
      <div class="col-md-4 mt-5 mb-0">
        <div class="card testimonial-card">
          <div class="card-up" style="background-color: #6d5b98;"></div>
          <div class="avatar mx-auto bg-white">
            <img src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(9).webp"
              class="rounded-circle img-fluid" />
          </div>
          <div class="card-body">
            
            <p class="lead fw-bold" ><%= connection.received.first_name%></p>
            <p class="dark-grey-text mt-4">
              <i class="fas fa-quote-left pe-2"></i><%= connection.received.profile_title%>
            </p>
            <% if connection.status == "accepted" %>
                <%= link_to connection.status.titleize, "javascript:void(0)", class: "btn btn-primary mt-2" %>
            <%else%>
                <%= link_to "Accept", "javascript:void(0)", class: "btn btn-success mt-2" %>
                <%= link_to "Rejected", "javascript:void(0)", class: "btn btn-danger mt-2" %>
            <%end%>
          </div>
        </div>
      </div>
    <%end%>  
    </div>
  </div>
<%end%>